<%= form_with(model: wellformednessverification, local: true) do |form| %>
  <% if wellformednessverification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wellformednessverification.errors.count, "error") %> prevented well-formedness verification from being carried out:</h2>

      <ul>
        <% wellformednessverification.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :g1_x, "x coordinate of g", class:"label" %>
    <%= form.text_field :g1_x, class:"input", placeholder:"x coordinate of g" %>
  </div>

  <div class="field">
    <%= form.label :g1_y, "y coordinate of g", class:"label" %>
    <%= form.text_field :g1_y, class:"input", placeholder:"y coordinate of g" %>
  </div>


  <div class="field">
    <%= form.label :g2_x, "x coordinate of g2", class:"label" %>
    <%= form.text_field :g2_x, class:"input", placeholder:"x coordinate of g2" %>
  </div>

  <div class="field">
    <%= form.label :g2_y, "y coordinate of g2", class:"label" %>
    <%= form.text_field :g2_y, class:"input", placeholder:"y coordinate of g2" %>
  </div>

  <div class="field">
    <%= form.label :big_ri_x, "x coordinate of Ri", class:"label" %>
    <%= form.text_field :big_ri_x, class:"input", placeholder:"x coordinate of Ri" %>
  </div>

  <div class="field">
    <%= form.label :big_ri_y, "y coordinate of Ri", class:"label" %>
    <%= form.text_field :big_ri_y, class:"input", placeholder:"y coordinate of Ri" %>
  </div>

  <div class="field">
    <%= form.label :big_zi_x, "x coordinate of Zi", class:"label" %>
    <%= form.text_field :big_zi_x, class:"input", placeholder:"x coordinate of Zi" %>
  </div>

  <div class="field">
    <%= form.label :big_zi_y, "y coordinate of Zi", class:"label" %>
    <%= form.text_field :big_zi_y, class:"input", placeholder:"y coordinate of Zi" %>
  </div>

  <div class="field">
    <%= form.label :c_1, "c_1", class:"label" %>
    <%= form.text_field :c_1, class:"input", placeholder:"c_1" %>
  </div>

  <div class="field">
    <%= form.label :c_2, "c_2", class:"label" %>
    <%= form.text_field :c_2, class:"input", placeholder:"c_2" %>
  </div>

  <div class="field">
    <%= form.label :r_1, "r_1", class:"label" %>
    <%= form.text_field :r_1, class:"input", placeholder:"r_1" %>
  </div>

  <div class="field">
    <%= form.label :r_2, "r_2", class:"label" %>
    <%= form.text_field :r_2, class:"input", placeholder:"r_2" %>
  </div>

  <div class="actions">
    <%= form.submit("Verify Well-Formedness", class: 'button is-info' ) %>
  </div>
<% end %>
